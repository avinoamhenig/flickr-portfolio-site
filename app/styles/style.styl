global-reset()

headerColor = black
headerTextColor = white
headerSelectionColor = #ff4337
headerOutlineColor = white
bodyColor = black

headerHeight = 90px
headerOutlineHeight = 8px
headerSelectionHeight = headerOutlineHeight

photoSpacing = 10px
photoPadding = photoSpacing / 2

html, body
	background bodyColor
	// overflow hidden

.header
	background headerColor
	overflow hidden

	.logo
		float left
		font-size 62px
		font-weight 100
		padding 22px 5px 0 15px
		color headerTextColor
		font-family Sacramento, sans-serif
		cursor default
		height headerHeight - 22px
		border-bottom headerOutlineHeight solid headerOutlineColor

	.nav
		float left
		padding 0 40px 0 30px
		border-bottom headerOutlineHeight solid headerOutlineColor
		height headerHeight

		a
			font-family Helvetica Neue, sans-serif
			font-size 20px
			font-weight 100
			display block
			color headerTextColor
			opacity 0.6
			transition opacity .3s
			text-decoration none
			padding ((headerHeight + (headerOutlineHeight / 2) - 24px) / 2) 15px

			&:hover, &:focus
				outline none
				opacity 1
				transition-duration .1s

			&.selected
				opacity 1
				transition-duration .1s
				border-bottom headerOutlineHeight solid headerSelectionColor

	.sets
		text-align right
		white-space nowrap
		overflow hidden
		position relative

		.borderFill
			position absolute
			width 100%
			border-bottom headerOutlineHeight solid headerOutlineColor
			height headerHeight

		.setsInner
			display inline-block
			position relative
			border-bottom headerOutlineHeight solid headerOutlineColor
			height headerHeight

			img
				height headerHeight
				widht headerHeight
				opacity 0.5
				cursor pointer
				transition opacity .3s

				&.selected
					opacity 1

				&:hover
					opacity 1
					transition-duration .1s

			.arrow
				display none
				width headerHeight
				height headerSelectionHeight
				background headerSelectionColor
				position absolute
				border none
				top headerHeight

				&.animate
					transition right .2s

.gallery
	overflow-y scroll
	-webkit-overflow-scrolling touch

	.photos
		padding photoPadding
		line-height 0
		overflow hidden
		white-space nowrap
		position relative

		span
			font-size 0

			img
				margin photoPadding
				cursor pointer
				opacity 0

				&.ready
					opacity 1
					transition opacity .3s

		.rightPad
			width photoSpacing
			height 100%
			position absolute
			right 0
			top 0
			background bodyColor

	.overlay
		visibility hidden
		opacity 0
		position fixed
		top 0
		left 0
		right 0
		bottom 0
		background rgba(0, 0, 0, 0.9)
		transition-duration .3s !important
		transition opacity, visibility

		&.active
			visibility visible
			opacity 1

		.imgContainer
			margin auto
			position relative

			&>img
				width 100%
				height 100%

			.imgOptions
				color white
				font-family Helvetica Neue, sans-serif
				font-weight 100
				font-size 26px

				.imgOptionsBtn
					z-index 9999
					font-weight 100
					font-family sans-serif
					font-size 30px
					height 44px
					width 44px
					background rgba(0, 0, 0, 0.4)
					position absolute
					bottom 10px
					right 10px
					border-radius 22px
					opacity 0
					visibility hidden
					transition-duration 1s
					transition-property opacity, visibility, background-color, transform, background-color
					cursor pointer

					span
						position absolute
						top 4px
						left 12px

					&.showButton, &:hover, &.closeBtn
						transition-duration .3s
						opacity 1
						visibility visible

					&:hover
						background rgba(0, 0, 0, 0.8)

					&.closeBtn
						transform rotate(45deg)
						background black

						&:hover
							background headerSelectionColor

				.optionsOverlay
					position absolute
					top 0
					width 100%
					height 100%
					background rgba(0, 0, 0, 0.7)
					opacity 0
					visibility hidden
					transition-duration .3s
					transition-property opacity, visibility

					&.showOverlay
						opacity 1
						visibility visible

					.buyModule
						position absolute
						top 20px
						right 20px
						font-size 0

						.sizesDrop
							font-size 26px
							position relative
							display inline-block

							.triangle
								width 0
								height 0
								border-left 8px solid transparent
								border-right 8px solid transparent
								border-top 8px solid rgba(white, 0.6)
								position absolute
								right 12px
								top 25px
								transition border-top-color .3s

							.size
								text-align left
							.price
								display inline-block
								position absolute
								text-align right
								right 38px

							.sizeVal
								padding 15px 28px
								width 200px
								cursor pointer
								background rgba(#999, 0.5)
								border-radius 2px 0 0 2px
								transition background-color
								transition-duration .3s

							.sizeOptions
								visibility hidden
								opacity 0
								position absolute
								background rgba(headerSelectionColor, 0.5)
								width 100%
								padding 7px 0
								border-radius 0 0 2px 2px
								margin-top -8px
								transition-property opacity, visibility, margin-top
								transition-duration .2s

								.sizeOption
									padding 7px 28px
									cursor pointer

									&:hover
										background rgba(headerSelectionColor, 0.5)

							&:hover

								.triangle
									border-top-color white

								.sizeOptions.active
									visibility visible
									opacity 1
									margin-top 0

								.sizeVal
									border-radius 2px 0 0 0
									background rgba(#999, 0.7)

						.paypal
							font-size 26px
							display inline-block

							.buyBtn
								padding 15px 28px
								cursor pointer
								background rgba(headerSelectionColor, 0.5)
								transition background-color .3s
								border-radius 0 2px 2px 0

								&:hover
									background rgba(headerSelectionColor, 0.7)

	.loader
		visibility hidden
		opacity 0
		position absolute
		transition-duration .3s
		transition-property opacity, visibility

		&.show
			visibility visible
			opacity 1
