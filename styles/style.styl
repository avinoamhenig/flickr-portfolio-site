global-reset()

headerColor = black
headerTextColor = white
headerSelectionColor = #ff4337
headerOutlineColor = white
bodyColor = black

headerHeight = 90px
headerOutlineHeight = 8px
headerSelectionHeight = headerOutlineHeight

photoSpacing = 10px
photoPadding = photoSpacing / 2

html body
	background bodyColor
	// overflow hidden

header
	background headerColor
	overflow hidden

	.logo
		float left
		font-size 62px
		font-weight 100
		padding 22px 5px 0 15px
		color headerTextColor
		font-family Sacramento, sans-serif
		cursor default
		height headerHeight - 22px
		border-bottom headerOutlineHeight solid headerOutlineColor

	.nav
		float left
		padding 0 45px 0 40px
		border-bottom headerOutlineHeight solid headerOutlineColor
		height headerHeight

		a
			font-family Helvetica Neue, sans-serif
			font-size 20px
			font-weight 100
			display block
			color headerTextColor
			opacity 0.6
			transition opacity .3s
			text-decoration none
			padding ((headerHeight + (headerOutlineHeight / 2) - 24px) / 2) 0

			&:hover, &:focus
				outline none
				opacity 1
				transition-duration .1s

	.sets
		text-align right
		white-space nowrap
		overflow hidden

		.borderFill
			position absolute
			width 100%
			border-bottom headerOutlineHeight solid headerOutlineColor
			height headerHeight

		.setsInner
			display inline-block
			position relative
			border-bottom headerOutlineHeight solid headerOutlineColor
			height headerHeight

			img
				height headerHeight
				widht headerHeight
				opacity 0.5
				cursor pointer
				transition opacity .3s

				&.selected
					opacity 1

				&:hover
					opacity 1
					transition-duration .1s

			.arrow
				display none
				width headerHeight
				height headerSelectionHeight
				background headerSelectionColor
				position absolute
				border none
				top headerHeight

				&.animate
					transition right .2s

.gallery
	overflow-y scroll
	-webkit-overflow-scrolling: touch;

	.photos
		padding photoPadding
		line-height 0
		overflow hidden
		white-space nowrap
		position relative

		span
			font-size 0

			img
				margin photoPadding
				cursor pointer
				opacity 0

				&.ready
					opacity 1
					transition opacity .3s

		.rightPad
			width photoSpacing
			height 100%
			position absolute
			right 0
			top 0
			background bodyColor

	.overlay
		visibility hidden
		opacity 0
		position fixed
		top 0
		left 0
		right 0
		bottom 0
		background rgba(0, 0, 0, 0.9)
		font-family sans-serif
		font-size 18px
		color white
		transition-duration .3s
		transition-property opacity, visibility

		&.active
			visibility visible
			opacity 1

		.imgContainer
			margin auto
			position relative

			&>img
				width 100%
				height 100%

			.imgOptions
				background rgba(0, 0, 0, 0.8)
				position absolute
				bottom 10px
				right 10px
				opacity 0
				visibility hidden
				transition-duration 1s
				transition-property opacity, visibility
				padding 11px 11px 9px 10px
				cursor pointer

				&.show
					transition-duration .3s
					opacity .5
					visibility visible

				&:hover
					opacity 1
					visibility visible

	.loader
		visibility hidden
		opacity 0
		position absolute
		transition-duration .3s
		transition-property opacity, visibility

		&.show
			visibility visible
			opacity 1
