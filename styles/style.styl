global-reset()

headerColor = black
headerTextColor = white
headerSelectionColor = #ff4337
headerOutlineColor = white
bodyColor = black

headerHeight = 90px
headerOutlineHeight = 8px
headerSelectionHeight = headerOutlineHeight

photoPadding = 5px
photoPaddingAdd = -2px

html
body
	background bodyColor

header
	position fixed
	top 0
	width 100%
	height headerHeight
	background headerColor
	border-bottom headerOutlineHeight solid headerOutlineColor
	white-space nowrap

	.logo
		font-size 62px
		font-weight 100
		padding 0 25px
		color headerTextColor
		font-family Sacramento, sans-serif
		cursor default
		display block
		position fixed
		top headerHeight - 68px

	nav
		display inline-block
		float left
		padding 0 0 0 130px

		a
			font-family sans-serif
			font-size 18px
			display inline-block
			color headerTextColor
			opacity 0.6
			transition opacity .3s
			text-decoration none
			margin-right 60px
			padding ((headerHeight - 18px) / 2) 5px

			&:hover
				opacity 1
				transition opacity .1s

			&:focus
				outline none
				opacity 1
				transition opacity .1s

		.selected
			color headerTextColor
			border-color headerSelectionColor

.sets
	display inline
	position absolute
	overflow hidden
	right -(headerHeight)
	left 112px
	height headerHeight + headerSelectionHeight
	text-align right

	img
		height headerHeight
		opacity 0.5
		cursor pointer
		transition opacity .3s

		&.selected
			opacity 1

		&:hover
			opacity 1
			transition opacity .1s

	.arrow
		display inline-block
		width headerHeight
		height headerSelectionHeight
		background headerSelectionColor
		position relative
		top 8px

.photos
	padding headerHeight + headerOutlineHeight + photoPadding + photoPaddingAdd photoPadding + photoPaddingAdd photoPadding + photoPaddingAdd photoPadding + photoPaddingAdd
	line-height 0
	overflow hidden
	white-space nowrap

	img
		margin photoPadding
		cursor pointer
		opacity 0
		&.loaded
			opacity 1
			transition opacity .3s

.rightPad
	width: photoPadding + photoPadding + photoPaddingAdd
	height: 5000px;
	position fixed
	right 0
	top headerHeight + headerOutlineHeight
	background bodyColor

.overlay
	visibility hidden
	opacity 0
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background rgba(0, 0, 0, 0.9)
	text-align center
	z-index 999
	font-family sans-serif
	font-size 18px
	color white
	transition-duration .3s
	transition-property opacity, visibility

	.addCart
		cursor pointer
		padding 10px

	.checkOut
		cursor pointer
		padding 10px

	&.active
		visibility visible
		opacity 1

.loader
	display none
	position absolute
